{
  "name": "warrantydog",
  "version": "1.0.0",
  "description": "Production warranty checker for Dell, Lenovo, and HP devices with CSV processing and real-time progress tracking",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "server": "node dist/server.js",
    "dev-server": "nodemon --exec ts-node --esm server.ts",
    "dev": "npm run build:frontend && npm run dev-server",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc --project tsconfig.json && npm run copy-assets",
    "copy-assets": "mkdir -p dist/src/database && cp src/database/schema.sql dist/src/database/",
    "build:frontend": "webpack --config webpack.config.cjs",
    "build:watch": "concurrently \"npm run build:backend -- --watch\" \"npm run build:frontend -- --watch\"",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "echo 'Note: ESLint not configured. Run npm run validate to install development tools.'",
    "format": "echo 'Note: Prettier not configured. Run npm run validate to install development tools.'",
    "validate": "npm run type-check && npm run build"
  },
  "keywords": [
    "warranty",
    "dell",
    "lenovo",
    "hp",
    "csv",
    "browser",
    "javascript",
    "api",
    "warranty-checker",
    "device-management"
  ],
  "author": "Rodrigo Quintian (cafasdon)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cafasdon/WarrantyDog.git"
  },
  "bugs": {
    "url": "https://github.com/cafasdon/WarrantyDog/issues"
  },
  "homepage": "https://github.com/cafasdon/WarrantyDog#readme",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "node-fetch": "^2.7.0",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "@types/node-fetch": "^2.6.13",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.1",
    "webpack-cli": "^6.0.1"
  }
}
